<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- URL rewrite rules -->
    <rewrite>
      <rules>
        <!-- API routes to Node.js server (最優先) -->
        <rule name="ReverseProxyAPI" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="http://127.0.0.1:5000/api/{R:1}" />
        </rule>
        
        <!-- Health check endpoint -->
        <rule name="HealthCheck" stopProcessing="true">
          <match url="^health$" />
          <action type="Rewrite" url="http://127.0.0.1:5000/health" />
        </rule>
        
        <!-- Static files from React build - 物理ファイルが存在する場合はそのまま配信 -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^static/(.*)" />
          <action type="Rewrite" url="client/build/static/{R:1}" />
        </rule>
        
        <!-- Root files (favicon, manifest, etc.) -->
        <rule name="RootFiles" stopProcessing="true">
          <match url="^(favicon\.ico|logo192\.png|logo512\.png|manifest\.json|robots\.txt)$" />
          <action type="Rewrite" url="client/build/{R:1}" />
        </rule>
        
        <!-- All other routes to React app -->
        <rule name="ReactApp" stopProcessing="true">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="client/build/index.html" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="client/build/index.html" />
      </files>
    </defaultDocument>
    
    <!-- Error handling -->
    <httpErrors errorMode="Detailed" />
  </system.webServer>
</configuration>